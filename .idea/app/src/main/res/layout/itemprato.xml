<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EEEEEE">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imprato"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:background="#A9A9A9"
        android:layout_marginStart="14dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Tipo do Prato"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/tv_prato"
        android:layout_alignTop="@+id/imprato"
        android:layout_toRightOf="@+id/imprato"
        android:layout_toEndOf="@+id/imprato"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="DescriÃ§ao"
        android:id="@+id/tv_descricao"
        android:layout_alignBottom="@+id/imprato"
        android:layout_alignLeft="@+id/tv_prato"
        android:layout_alignStart="@+id/tv_prato"/>

</RelativeLayout>

    </LinearLayout>

